            <object-name>Manche</object-name>
            <property>/controls/flight/elevator</property>
            <factor>-10</factor>
            <center>
                    <x-m>-0.195624</x-m>
                    <y-m>0.0169111</y-m>
                    <z-m>0.006028</z-m>
            </center>
            <axis>
                    <x>0.0</x>
                    <y>1.0</y>
                    <z>0.0</z>
            </axis>
    </animation>

    <animation>
            <type>rotate</type>
            <object-name>Manche</object-name>
            <property>/controls/flight/aileron</property>
            <factor>-10</factor>
            <center>
                    <x-m>-0.195624</x-m>
                    <y-m>0.0169111</y-m>
                    <z-m>0.006028</z-m>
            </center>
            <axis>
                    <x>1.0</x>
                    <y>0.0</y>
                    <z>0.0</z>
            </axis>
    </animation>

    <animation>
            <type>translate</type>
            <object-name>GPalon</object-name>
            <property>/controls/flight/rudder</property>
            <factor>0.100</factor>
            <axis>
                    <x>1</x>
                    <y>0</y>
                    <z>0</z>
            </axis>
    </animation>

    <animation>
            <type>translate</type>
            <object-name>DPalon</object-name>
            <property>/controls/flight/rudder</property>
            <factor>-0.100</factor>
            <axis>
                    <x>1</x>
                    <y>0</y>
                    <z>0</z>
            </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Throttle1-Cde</object-name>
        <property>/controls/engines/engine[1]/throttle</property>
        <interpolation>
                <entry>
                <ind>0</ind>
                <dep>-10</dep>
                </entry>
                <entry>
                <ind>1</ind>
                <dep>-65</dep>
                </entry>
        </interpolation>
        <center>
                <x-m>-0.172948</x-m>
                <y-m>0</y-m>
                <z-m>0.042163</z-m>
        </center>
        <axis>
                <x>0</x>
                <y>1</y>
                <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Throttle2-Cde</object-name>
        <property>/controls/engines/engine[0]/throttle</property>
        <interpolation>
                <entry>
                <ind>0</ind>
                <dep>-10</dep>
                </entry>
                <entry>
                <ind>1</ind>
                <dep>-65</dep>
                </entry>
        </interpolation>
        <center>
                <x-m>-0.172948</x-m>
                <y-m>0</y-m>
                <z-m>0.042163</z-m>
        </center>
        <axis>
                <x>0</x>
                <y>1</y>
                <z>0</z>
        </axis>
    </animation>

	<!-- throttle friction lever -->
	
	<animation>
        <type>pick</type>
        <object-name>Throttle-friction</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/controls/engines/friction-lever</property>
				<step>1</step>
				<min>0</min>
				<max>4</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/controls/engines/friction-lever</property>
				<step>-1</step>
				<min>0</min>
				<max>4</max>
				<wrap>false</wrap>
			</binding>
		</action>
    </animation>
	
	<animation>
        <type>rotate</type>
        <object-name>Throttle-friction</object-name>
        <property>/controls/engines/friction-lever</property>
        <interpolation>
                <entry>
                <ind>0</ind>
                <dep>-2</dep>
                </entry>
                <entry>
                <ind>4</ind>
                <dep>-60</dep>
                </entry>
        </interpolation>
        <center>
                <x-m>-0.172948</x-m>
                <y-m>0</y-m>
                <z-m>0.042163</z-m>
        </center>
        <axis>
                <x>0</x>
                <y>1</y>
                <z>0</z>
        </axis>
    </animation>

